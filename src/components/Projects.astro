---
const projects = [
	{
		title: "Plataforma de E-commerce",
		description: "Plataforma de tienda en línea con carrito de compras, procesamiento de pagos y panel administrativo.",
		technologies: ["React", "Node.js", "MongoDB", "Stripe"],
		link: "#"
	},
	{
		title: "Sistema de Gestión de Tareas",
		description: "Aplicación colaborativa para gestionar proyectos y tareas en equipo con tiempo real.",
		technologies: ["Vue.js", "Express", "PostgreSQL", "Socket.io"],
		link: "#"
	},
	{
		title: "Dashboard de Análisis",
		description: "Panel interactivo para visualizar datos en tiempo real con gráficos dinámicos.",
		technologies: ["React", "D3.js", "GraphQL", "AWS"],
		link: "#"
	},
	{
		title: "API REST Escalable",
		description: "Arquitectura de microservicios para manejar alto volumen de tráfico.",
		technologies: ["Node.js", "Docker", "Kubernetes", "PostgreSQL"],
		link: "#"
	}
];
---

<section id="projects" class="projects">
	<div class="container">
		<h2>Proyectos</h2>
		<div class="projects-grid">
			{projects.map(project => (
				<div class="project-card">
					<h3>{project.title}</h3>
					<p class="project-description">{project.description}</p>
					<div class="project-tech">
						{project.technologies.map(tech => (
							<span class="tech-badge">{tech}</span>
						))}
					</div>
					<a href={project.link} class="project-link">Ver Proyecto →</a>
				</div>
			))}
		</div>
	</div>
</section>

<style>
	.projects {
		padding: 5rem 2rem;
		background-color: var(--color-secondary);
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
	}

	.projects h2 {
		text-align: center;
		margin-bottom: 3rem;
		color: var(--color-accent);
	}

	.projects-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
	}

	.project-card {
		background: var(--color-primary);
		padding: 2rem;
		border-radius: 0.75rem;
		border: 1px solid var(--color-border);
		transition: all 0.3s ease;
		display: flex;
		flex-direction: column;
	}

	.project-card:hover {
		border-color: var(--color-accent);
		transform: translateY(-8px);
		box-shadow: 0 20px 40px rgba(59, 130, 246, 0.2);
	}

	.project-card h3 {
		color: var(--color-accent);
		margin-bottom: 1rem;
	}

	.project-description {
		color: var(--color-text-muted);
		margin-bottom: 1.5rem;
		flex-grow: 1;
		line-height: 1.6;
	}

	.project-tech {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
		margin-bottom: 1.5rem;
	}

	.tech-badge {
		background: var(--color-secondary);
		color: var(--color-accent-light);
		padding: 0.25rem 0.75rem;
		border-radius: 2rem;
		font-size: 0.8rem;
	}

	.project-link {
		color: var(--color-accent);
		font-weight: 600;
		transition: all 0.3s ease;
		align-self: flex-start;
	}

	.project-link:hover {
		transform: translateX(4px);
	}

	@media (max-width: 768px) {
		.projects {
			padding: 3rem 1rem;
		}

		.projects-grid {
			grid-template-columns: 1fr;
		}
	}
</style>
