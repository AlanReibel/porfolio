---
const projects = [
	{
		title: "Plataforma de E-commerce",
		description: "Plataforma de tienda en línea con carrito de compras, procesamiento de pagos y panel administrativo.",
		technologies: ["React", "Node.js", "MongoDB", "Stripe"],
		link: "#",
		image: "https://images.pexels.com/photos/3184292/pexels-photo-3184292.jpeg?auto=compress&cs=tinysrgb&w=600&h=400&fit=crop",
		status: "Completado"
	},
	{
		title: "Sistema de Gestión de Tareas",
		description: "Aplicación colaborativa para gestionar proyectos y tareas en equipo con tiempo real.",
		technologies: ["Vue.js", "Express", "PostgreSQL", "Socket.io"],
		link: "#",
		image: "https://images.pexels.com/photos/3184465/pexels-photo-3184465.jpeg?auto=compress&cs=tinysrgb&w=600&h=400&fit=crop",
		status: "En desarrollo"
	},
	{
		title: "Dashboard de Análisis",
		description: "Panel interactivo para visualizar datos en tiempo real con gráficos dinámicos.",
		technologies: ["React", "D3.js", "GraphQL", "AWS"],
		link: "#",
		image: "https://images.pexels.com/photos/3184339/pexels-photo-3184339.jpeg?auto=compress&cs=tinysrgb&w=600&h=400&fit=crop",
		status: "Completado"
	},
	{
		title: "API REST Escalable",
		description: "Arquitectura de microservicios para manejar alto volumen de tráfico.",
		technologies: ["Node.js", "Docker", "Kubernetes", "PostgreSQL"],
		link: "#",
		image: "https://images.pexels.com/photos/3184360/pexels-photo-3184360.jpeg?auto=compress&cs=tinysrgb&w=600&h=400&fit=crop",
		status: "Completado"
	}
];
---

<section id="projects" class="projects">
	<div class="container">
		<h2>Proyectos</h2>
		<p class="section-subtitle">Algunos de mis trabajos más destacados</p>
		<div class="projects-grid">
			{projects.map(project => (
				<div class="project-card">
					<div class="project-image">
						<img src={project.image} alt={project.title} />
						<div class="project-overlay">
							<div class="project-status" class={`status-${project.status.toLowerCase().replace(' ', '-')}`}>
								{project.status}
							</div>
						</div>
					</div>
					<div class="project-content">
					<h3>{project.title}</h3>
					<p class="project-description">{project.description}</p>
					<div class="project-tech">
						{project.technologies.map(tech => (
							<span class="tech-badge">{tech}</span>
						))}
					</div>
					<a href={project.link} class="project-link">Ver Proyecto →</a>
					</div>
				</div>
			))}
		</div>
	</div>
</section>

<style>
	.projects {
		padding: 5rem 2rem;
		background: linear-gradient(135deg, #1a202c 0%, var(--color-secondary) 100%);
		position: relative;
	}

	.projects::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		height: 1px;
		background: linear-gradient(90deg, transparent, var(--color-accent), transparent);
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
	}

	.projects h2 {
		text-align: center;
		margin-bottom: 3rem;
		background: linear-gradient(135deg, var(--color-gradient-1), var(--color-gradient-2));
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		position: relative;
	}

	.projects h2::after {
		content: '';
		position: absolute;
		bottom: -10px;
		left: 50%;
		transform: translateX(-50%);
		width: 60px;
		height: 3px;
		background: linear-gradient(90deg, var(--color-gradient-1), var(--color-gradient-2));
		border-radius: 2px;
	}

	.section-subtitle {
		text-align: center;
		color: var(--color-text-muted);
		font-size: 1.1rem;
		margin-bottom: 3rem;
		font-weight: 300;
	}

	.projects-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
	}

	.project-card {
		background: rgba(255, 255, 255, 0.02);
		backdrop-filter: blur(10px);
		border-radius: 0.75rem;
		border: 1px solid rgba(255, 255, 255, 0.1);
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		display: flex;
		flex-direction: column;
		overflow: hidden;
		position: relative;
	}

	.project-card:hover {
		border-color: rgba(59, 130, 246, 0.3);
		transform: translateY(-8px);
		box-shadow: var(--shadow-strong);
	}

	.project-image {
		position: relative;
		height: 200px;
		overflow: hidden;
	}

	.project-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: transform 0.3s ease;
	}

	.project-card:hover .project-image img {
		transform: scale(1.1);
	}

	.project-overlay {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: linear-gradient(135deg, rgba(59, 130, 246, 0.2), rgba(147, 51, 234, 0.2));
		opacity: 0;
		transition: opacity 0.3s ease;
		display: flex;
		align-items: flex-start;
		justify-content: flex-end;
		padding: 1rem;
	}

	.project-card:hover .project-overlay {
		opacity: 1;
	}

	.project-status {
		padding: 0.5rem 1rem;
		border-radius: 2rem;
		font-size: 0.8rem;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 1px;
	}

	.status-completado {
		background: rgba(34, 197, 94, 0.2);
		color: #22c55e;
		border: 1px solid #22c55e;
	}

	.status-en-desarrollo {
		background: rgba(251, 191, 36, 0.2);
		color: #fbbf24;
		border: 1px solid #fbbf24;
	}

	.project-content {
		padding: 2rem;
		flex-grow: 1;
		display: flex;
		flex-direction: column;
	}

	.project-card h3 {
		color: var(--color-accent);
		margin-bottom: 1rem;
		font-size: 1.3rem;
	}

	.project-description {
		color: var(--color-text-muted);
		margin-bottom: 1.5rem;
		flex-grow: 1;
		line-height: 1.6;
	}

	.project-tech {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
		margin-bottom: 1.5rem;
	}

	.tech-badge {
		background: linear-gradient(135deg, rgba(59, 130, 246, 0.1), rgba(59, 130, 246, 0.05));
		color: var(--color-accent-light);
		padding: 0.25rem 0.75rem;
		border-radius: 2rem;
		font-size: 0.8rem;
		border: 1px solid rgba(59, 130, 246, 0.2);
		transition: all 0.3s ease;
	}

	.tech-badge:hover {
		background: var(--color-accent);
		color: white;
		transform: translateY(-2px);
	}

	.project-link {
		color: var(--color-accent);
		font-weight: 600;
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		align-self: flex-start;
		padding: 0.75rem 1.5rem;
		border: 2px solid var(--color-accent);
		border-radius: 0.5rem;
		text-decoration: none;
		position: relative;
		overflow: hidden;
	}

	.project-link::before {
		content: '';
		position: absolute;
		top: 0;
		left: -100%;
		width: 100%;
		height: 100%;
		background: var(--color-accent);
		transition: left 0.3s ease;
		z-index: -1;
	}

	.project-link:hover::before {
		left: 0;
	}

	.project-link:hover {
		color: white;
		transform: translateY(-2px);
		box-shadow: var(--shadow-soft);
	}

	@media (max-width: 768px) {
		.projects {
			padding: 3rem 1rem;
		}

		.projects-grid {
			grid-template-columns: 1fr;
		}

		.project-image {
			height: 180px;
		}
	}
</style>
