---
const experiences = [
	{
		title: "Desarrollador Full Stack Senior",
		company: "Empresa Tech",
		period: "2023 - Presente",
		description: "Desarrollo de aplicaciones web modernas, liderazgo técnico y mentoría de equipos."
	},
	{
		title: "Desarrollador Full Stack",
		company: "StartUp Digital",
		period: "2021 - 2023",
		description: "Creación de plataformas SaaS, optimización de rendimiento y arquitectura de sistemas."
	},
	{
		title: "Desarrollador Frontend",
		company: "Agencia Web",
		period: "2019 - 2021",
		description: "Desarrollo de interfaces responsive, componentes reutilizables y mejora UX."
	}
];
---

<section id="experience" class="experience">
	<div class="container">
		<h2>Experiencia</h2>
		<div class="timeline">
			{experiences.map((exp, index) => (
				<div class="timeline-item">
					<div class="timeline-marker"></div>
					<div class="timeline-content">
						<h3>{exp.title}</h3>
						<p class="company">{exp.company}</p>
						<p class="period">{exp.period}</p>
						<p class="description">{exp.description}</p>
					</div>
				</div>
			))}
		</div>
	</div>
</section>

<style>
	.experience {
		padding: 5rem 2rem;
		background-color: var(--color-primary);
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
	}

	.experience h2 {
		text-align: center;
		margin-bottom: 3rem;
		color: var(--color-accent);
	}

	.timeline {
		position: relative;
		padding: 2rem 0;
	}

	.timeline::before {
		content: '';
		position: absolute;
		left: 50%;
		top: 0;
		bottom: 0;
		width: 2px;
		background: var(--color-border);
		transform: translateX(-50%);
	}

	.timeline-item {
		margin-bottom: 2rem;
		position: relative;
	}

	.timeline-item:nth-child(odd) .timeline-content {
		margin-left: 0;
		margin-right: auto;
		width: calc(50% - 3rem);
		text-align: right;
	}

	.timeline-item:nth-child(even) .timeline-content {
		margin-left: auto;
		margin-right: 0;
		width: calc(50% - 3rem);
		text-align: left;
	}

	.timeline-marker {
		position: absolute;
		left: 50%;
		top: 0;
		width: 16px;
		height: 16px;
		background: var(--color-accent);
		border: 4px solid var(--color-primary);
		border-radius: 50%;
		transform: translateX(-50%);
	}

	.timeline-content {
		padding: 1.5rem;
		background: var(--color-secondary);
		border-radius: 0.5rem;
		border-left: 2px solid var(--color-accent);
	}

	.timeline-item:nth-child(even) .timeline-content {
		border-left: none;
		border-right: 2px solid var(--color-accent);
	}

	.timeline-content h3 {
		color: var(--color-accent);
		margin-bottom: 0.5rem;
	}

	.company {
		color: var(--color-accent-light);
		font-weight: 600;
		margin-bottom: 0.25rem;
	}

	.period {
		color: var(--color-text-muted);
		font-size: 0.9rem;
		margin-bottom: 1rem;
	}

	.description {
		color: var(--color-text-muted);
		line-height: 1.6;
	}

	@media (max-width: 768px) {
		.timeline::before {
			left: 0;
		}

		.timeline-marker {
			left: 0;
		}

		.timeline-item:nth-child(odd) .timeline-content,
		.timeline-item:nth-child(even) .timeline-content {
			width: 100%;
			margin-left: 2rem;
			text-align: left;
			border-left: 2px solid var(--color-accent);
			border-right: none;
		}

		.experience {
			padding: 3rem 1rem;
		}
	}
</style>
